+from typing import Dict
+
+def build_prev_map(ficha) -> Dict[str, Dict[str, dict]]:
+    """
+    Devuelve un dict por sección->campo con 'status' y 'notes'
+    a partir de StudentFieldReview (ficha.field_reviews).
+    Formato esperado por la plantilla:
+      {
+        "Antecedentes Generales": {
+            "rut": {"status": "REVISADO_OK", "notes": "..."},
+            ...
+        },
+        ...
+      }
+    """
+    out: Dict[str, Dict[str, dict]] = {}
+    for fr in ficha.field_reviews.all():
+        sec = (fr.section or "").strip()
+        key = (fr.field_key or "").strip()
+        if not sec or not key:
+            continue
+        out.setdefault(sec, {})[key] = {
+            "status": fr.status,
+            "notes": fr.notes or "",
+        }
+    return out
